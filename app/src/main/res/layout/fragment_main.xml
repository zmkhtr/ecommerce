<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.MainFragment.MainFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/view"
            android:background="@color/colorPrimary"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textHomeSell"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_main_menu_sell"
                    android:text="@string/main_feature_sell"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/textHomeRent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_main_menu_rent"
                    android:text="@string/main_feature_rent"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/textHomePreOrder"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_main_menu_pre_order"
                    android:text="@string/main_feature_pre_order"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:padding="15dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card"
            android:text="@string/main_title_promo"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/grey"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"/>
        <com.smarteist.autoimageslider.SliderView
            android:layout_below="@+id/text"
            android:id="@+id/sliderHomeImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            app:sliderAnimationDuration="600"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:sliderAutoCycleDirection="right"
            app:sliderAutoCycleEnabled="true"
            app:sliderCircularHandlerEnabled="true"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMargin="15dp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="3dp"
            app:sliderIndicatorRadius="2dp"
            app:sliderIndicatorSelectedColor="@color/colorPrimary"
            app:sliderIndicatorUnselectedColor="#FFF"
            app:sliderScrollTimeInSec="3"
            app:sliderStartAutoCycle="false" />
        <TextView
            android:id="@+id/textCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sliderHomeImage"
            android:text="@string/main_title_categories"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/grey"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewHomeSubCategories"
            android:layout_below="@+id/textCategories"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerViewHomeSubCategories"
            android:text="@string/main_title_new_product"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/grey"
            android:textAlignment="center"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:layout_marginEnd="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewHomeProduct"
            android:layout_below="@+id/textProduct"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"/>

<!--        <include layout="@layout/shimmer_main_loading"/>-->
    </RelativeLayout>

</androidx.core.widget.NestedScrollView>
