<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    shimmer:duration="800"
    android:id="@+id/shimmerMainLoading"
    tools:context=".UI.MainFragment.MainFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/view"
            android:background="@color/colorPrimary"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_marginEnd="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@color/grey"
                    android:textAlignment="center"
                    android:padding="15dp"/>

                <View
                    android:layout_marginEnd="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@color/grey"
                    android:textAlignment="center"
                    android:padding="15dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_60sdp"
                    android:background="@color/grey"
                    android:textAlignment="center"
                    android:padding="15dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <View
            android:id="@+id/text"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_below="@+id/card"
            android:background="@color/grey"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"/>
        <View
            android:layout_below="@+id/text"
            android:id="@+id/imageDetailSlider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:background="@color/grey"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />
        <View
            android:id="@+id/textCategories"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_below="@+id/imageDetailSlider"
            android:background="@color/grey"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"/>

            <LinearLayout
                android:id="@+id/recyclerViewHomeCategories"
                android:layout_below="@+id/textCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp">

                <View
                    android:layout_marginEnd="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/grey"
                    android:textAlignment="center"
                    android:padding="15dp"/>

                <View
                    android:layout_marginEnd="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/grey"
                    android:textAlignment="center"
                    android:padding="15dp"/>

                <View
                    android:layout_marginEnd="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/grey"
                    android:textAlignment="center"
                    android:padding="15dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/grey"
                    android:textAlignment="center"
                    android:padding="15dp"/>
            </LinearLayout>
        <View
            android:id="@+id/textProduct"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_15sdp"
            android:background="@color/grey"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/recyclerViewHomeCategories"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>

        <LinearLayout
            android:layout_below="@+id/textProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp">

            <View
                android:layout_marginEnd="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_140sdp"
                android:background="@color/grey"
                android:textAlignment="center"
                android:padding="15dp"/>

            <View
                android:layout_marginEnd="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_140sdp"
                android:background="@color/grey"
                android:textAlignment="center"
                android:padding="15dp"/>

            <View
                android:layout_marginEnd="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_140sdp"
                android:background="@color/grey"
                android:textAlignment="center"
                android:padding="15dp"/>

        </LinearLayout>
    </RelativeLayout>

</com.facebook.shimmer.ShimmerFrameLayout>