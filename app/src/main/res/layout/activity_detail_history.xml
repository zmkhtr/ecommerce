<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".UI.History.DetailHistoryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textHistoryOrderCode"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Order#5c221d4c5423e"
        android:layout_margin="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <io.canner.stepsview.StepsView
        android:id="@+id/stepsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:progressMargin="60"
        custom:labelSize="10"
        custom:circleRadius="30"
        custom:numOfSteps="6"
        />


    <TextView
        android:id="@+id/textHistoryResi"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="No Resi : 12930128903812938"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
        android:id="@+id/textHistoryShippingMethod"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="JNE City Courier Rp. 9000 ( 1-2 ) Hari"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <TextView
        android:id="@+id/textHistoryTotalPrice"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Total : Rp. 123903"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <TextView
        android:id="@+id/textHistoryDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Order date : 2018-12-22 15:42:22"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>


    <TextView
        android:id="@+id/textHistoryNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Note : \nReady on progres, out of stock cancelled"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

    <LinearLayout
        android:id="@+id/layoutAdminHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Admin Menu"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="dropdown_menu"
            android:hint="Change status">


            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/dropdownAdminHistoryStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input Resi">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtAdminHistoryResi"
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btnAdminHistoryUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:text="Update Data"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

    </LinearLayout>
</ScrollView>